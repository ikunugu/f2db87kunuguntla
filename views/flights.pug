extends layout

block content
  h1= title
  - var results = results
    div(class = 'container-fluid')
      div(class = 'row')
        each item,i  in results 
          div(class="col-sm-2", onClick=`buy(${i})`) flightName : #{item["flightName"]} <br> flightType : #{item["flightType"]} <br> price: #{item["price"]}
          script.
            function buy(val) {
              alert(`You purchased item ${val}`)
            }